<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="detailViewModel"
                  type="com.notepoint4ugmail.marvelheroesretrofit.detail.MovieDetailViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".detail.MovieDetailFragment">
        <ImageView
                app:imageBinder="@{detailViewModel.selectedMovie.imageUrl}"
                android:id="@+id/movie_image"
                android:layout_width="0dp"
                android:layout_height="266dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/backgrounds/scenic" />
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/movie_title"
                app:layout_constraintStart_toStartOf="@+id/movie_image"
                app:layout_constraintEnd_toEndOf="@+id/movie_image"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/movie_image"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                tools:text="Captain marvel"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movie_rating"
                tools:text="UA"
                app:layout_constraintStart_toEndOf="@+id/movie_language"
                android:layout_marginStart="8dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/movie_language"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movie_like_percent"
                tools:text="75%"
                app:layout_constraintStart_toEndOf="@+id/movie_rating"
                android:layout_marginStart="8dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/movie_language"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movie_language"
                tools:text="English"
                app:layout_constraintStart_toStartOf="@+id/movie_title"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/movie_title"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>